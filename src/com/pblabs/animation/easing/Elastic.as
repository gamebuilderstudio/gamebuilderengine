				s = p/(2*Math.PI) * Math.asin (c/a);			}			return -(a*Math.pow(2,10*(t-=1)) * Math.sin( (t*d-s)*(2*Math.PI)/p )) + b;		}				public static function easeOut(t:Number, b:Number, c:Number, d:Number):Number {			if (t==0) return b;			if ((t/=d)==1) return b+c;			var p:Number = d*.3;			var s:Number;			var a:Number = 0;			if (!Boolean(a) || a < Math.abs(c)) {				a = c;				s = p/4;			} else {				s = p/(2*Math.PI) * Math.asin (c/a);			}			return (a*Math.pow(2,-10*t) * Math.sin( (t*d-s)*(2*Math.PI)/p ) + c + b);		}				public static function easeInOut(t:Number, b:Number, c:Number, d:Number):Number {			if (t==0) return b;			if ((t/=d/2)==2) return b+c;			var p:Number = d*(.3*1.5);			var s:Number;			var a:Number = 0;			if (!Boolean(a) || a < Math.abs(c)) {				a = c;				s = p/4;			} else {				s = p/(2*Math.PI) * Math.asin (c/a);			}			if (t < 1) return -.5*(a*Math.pow(2,10*(t-=1)) * Math.sin( (t*d-s)*(2*Math.PI)/p )) + b;			return a*Math.pow(2,-10*(t-=1)) * Math.sin( (t*d-s)*(2*Math.PI)/p )*.5 + c + b;		}	}}